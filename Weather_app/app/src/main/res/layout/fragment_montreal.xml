        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toStartOf="@+id/m_min"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_city" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:layout_marginTop="34dp"
        android:text="MAX"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toStartOf="@+id/m_max"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m_min"
        app:layout_constraintTop_toBottomOf="@+id/m_city" />

    <TextView
        android:id="@+id/m_max"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:layout_marginTop="34dp"
        android:text="0"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/m_city" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginTop="29dp"
        android:text="Actual"
        android:textColor="@color/colorPrimary"
        android:textSize="45sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toStartOf="@+id/m_actual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_min" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginTop="39dp"
        android:text="Humidity"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toStartOf="@+id/m_humidity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="255dp"
        android:layout_height="54dp"
        android:layout_marginTop="25dp"
        android:text="Predictability"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toStartOf="@+id/m_predic"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/m_actual"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_marginTop="27dp"
        android:text="0"
        android:textColor="#E91E63"
        android:textSize="45sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/m_humidity"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_marginTop="37dp"
        android:text="0"
        android:textColor="#E91E63"
        android:textSize="36sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/m_actual" />

    <TextView
        android:id="@+id/m_predic"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
