        app:layout_constraintEnd_toStartOf="@+id/m_day5img"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m_day3img"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/m_day5img"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginTop="26dp"
        android:src="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m_day4img"
        app:layout_constraintTop_toBottomOf="@+id/m_predic" />

    <TextView
        android:id="@+id/m_day1"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginTop="15dp"
        android:text="Day"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/m_day2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_day1img" />

    <TextView
        android:id="@+id/m_day2"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginTop="15dp"
